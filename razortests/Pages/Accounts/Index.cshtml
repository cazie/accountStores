@page
@model razortests.Pages.Accounts.IndexModel
@{
}



<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Account List</h2>
        </div>

        <div class="col-6  text-end">
            <a asp-page="Create" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> Create Account
            </a>
        </div>

    </div>
</div>
<br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Display Order</th>
            <th>Account Name</th>
            <th>Account Description</th>
            <th>Password</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Accounts)
        {
            <tr>
                <td>@item.DisplayOrder</td>
                <td>@item.AccountName</td>
                <td>@item.Description</td>
                <td>@item.Password</td>
                <td>

                    <div class="w-75 btn-group" role="group">
                        <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2"><i class="bi bi-trash3"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }

    </tbody>
</table>
